<% include ./partials/head.ejs %>
<title>Index</title>
</head>
<body>

<% include ./partials/navbar.ejs %>

    <div class="container">
        <div class="subheader">
                <h3><%= title %></h3>
        </div>
        <div class="row">
            <div class="col-4">
                    <table class="table">
                            <thead>
                              <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col">Quantity Available</th>
                                <th scope="col">Part Number</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% products.forEach((product)=>{ %>
                                <tr>
                                    <th scope="row">1</th>
                                    <td><%= product.name %></td>
                                    <td><%= product.quantity %></td>
                                    <td><%= product.part_number %></td>
                                  </tr>
                             <% }) %>
                             
                            </tbody>
                          </table>
            </div>
            <div class="col-6 ml-auto">
                    <form action="/orders" method="POST">
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Product Name</label>
                            <input type="text" name="name" class="form-control" id="name" placeholder="Name of Product">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Part Number</label>
                            <input type="number" name="part_number" required class="form-control" id="part_number" placeholder="Part Number">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlInput1">Quantity</label>
                            <input type="number" name="quantity" class="form-control" id="quantity" placeholder="Quantity">
                        </div>
                        <button type="submit" class="btn btn-primary">Make Order</button>
                    </form>
            </div>
        </div>
    </div>
    <% include ./partials/footer.ejs %>
</body>
</html>