<% include ./partials/head.ejs %>
<title><%= title %></title>
</head>
<body>
        <% include ./partials/navbar.ejs %>
    <div class="container">
            <h3><%= title %></h3>
    <form action="/products/add" method="POST">
        <div class="form-group">
            <label for="exampleFormControlInput1">Product Name</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Name of Product">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Description</label>
            <input type="text" name="description" class="form-control" id="description" placeholder="Description">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Quantity</label>
            <input type="number" name="quantity" class="form-control" id="quantity" placeholder="Quantity">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Part Number</label>
            <input type="number" name="part_number" class="form-control" id="part_number" placeholder="Part Number">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Warehouse</label>
            <select class="form-control" name="warehouse" id="exampleFormControlSelect1">
                <% warehouse.forEach((house)=>{ %>
                        <option value="<%= house._id %>"><%= house.name %></option>
                    <% }) %>
                
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<% include ./partials/footer.ejs %>
</body>
</html>