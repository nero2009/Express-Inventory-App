<% include ./partials/head.ejs %>
<title><%= title %></title>
</head>
<body>
    <% include ./partials/navbar.ejs %>
    <h1><%= title %></h1>
    <div class="container">
        <div class="subheader">
                <h3><%= title %></h3>
        </div>
    <form action="/products/edit/<%= product._id %>" method="POST">
        <div class="form-group">
            <label for="exampleFormControlInput1">Name</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Name of Warehouse" value="<%= product.name %>">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Description</label>
            <input type="text" name="description" class="form-control" id="description" placeholder="Descriptiom" value="<%= product.description %>">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Quantity</label>
            <input type="number" name="quantity" class="form-control" id="quantity" placeholder="Quantity" value="<%= product.quantity %>">
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Part Number</label>
            <input type="number" name="part_number" class="form-control" id="part_number" placeholder="Quantity" value="<%= product.part_number %>">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Warehouse</label>
            <select class="form-control" name="warehouse" id="exampleFormControlSelect1">
                <% warehouse.forEach((house)=>{ %>
                    <% if(house._id == product.warehouse){ %>
                        <option value="<%= house._id %>" selected><%= house.name %></option>
                      <% } else{ %>  
                        <option value="<%= house._id %>"><%= house.name %></option>
                     <% } %>
                    <% }) %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-danger" href="/manage/products">Back</a>
    </form>
</div>
<% include ./partials/footer.ejs %>
</body>
</html>